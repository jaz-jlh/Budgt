<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/title_overview"
        android:textSize="30sp"
        android:id="@+id/overview_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_placeholder"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/overview_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/total_amount_spent"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_placeholder"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/total_amount_spent"
        android:layout_centerHorizontal="true"
        android:id="@+id/average_per_day"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_placeholder"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/average_per_day"
        android:layout_centerHorizontal="true"
        android:id="@+id/category_totals"
        android:textSize="20sp"
        />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_totals"
        />

</RelativeLayout>